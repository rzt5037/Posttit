<h1>All Questions</h1>
<% @questions.each do |question| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to question.title, question %>
        <p>Resolved: <%= check_box_tag 'question', 'resolved', question.resolved, :disabled => true %></p>
      </h4>
    </div>
  </div>
<% end %>
